PORT=3000
NODE_ENV=development

# MCP Server initialization delay (in milliseconds)
# Time to wait between starting each MCP server to prevent I/O overload
# Default: 1000 (1 second)
MCP_SERVER_STARTUP_DELAY=1000

# Database configuration for vector search and embeddings
# Format: postgresql://username:password@host:port/database
DB_URL=postgresql://postgres:postgres@localhost:5432/mcphub

# Smart Routing Configuration
# Enable intelligent tool discovery and routing via vector search
SMART_ROUTING_ENABLED=true

# OpenRouter/OpenAI Configuration for Smart Routing
# For OpenRouter: use sk-or-v1-... key and openrouter.ai base URL
# For OpenAI: use sk-... key and api.openai.com base URL
OPENAI_API_KEY=your-api-key-here
OPENAI_API_BASE_URL=https://openrouter.ai/api/v1
OPENAI_API_EMBEDDING_MODEL=text-embedding-3-small

# Optional: Model for LLM queries (if needed for Smart Routing features)
OPENAI_MODEL=x-ai/grok-4-fast:free
